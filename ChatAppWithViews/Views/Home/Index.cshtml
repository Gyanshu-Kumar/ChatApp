<!DOCTYPE html>
<html>
<head>
    <title>Chat App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background-color: #E0E0E0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .chat-container {
            background: white;
            border-radius: 15px;
            padding: 20px;
            width: 60%;
            max-width: 1200px;
            height: 80vh;
            display: flex;
            flex-direction: column;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        #messages {
            flex-grow: 1;
            overflow-y: auto;
            padding: 15px;
            background-color: #F7F7F7;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .message {
            display: flex;
            align-items: flex-end;
            margin-bottom: 10px;
            animation: fadeIn 0.3s ease;
        }

        .message-bubble {
            padding: 12px 18px;
            border-radius: 20px;
            max-width: 70%;
            word-wrap: break-word;
            position: relative;
        }

        .sender {
            justify-content: flex-end;
        }

        .receiver {
            justify-content: flex-start;
        }

        .sender .message-bubble {
            background-color: #DCF8C6;
            border-bottom-right-radius: 0;
        }

        .receiver .message-bubble {
            background-color: #FFFFFF;
            border-bottom-left-radius: 0;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin: 0 10px;
        }

        .send-section {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .send-section input, .send-section textarea {
            border-radius: 10px;
            padding: 10px;
            border: 1px solid #ddd;
        }

        .send-section input {
            width: 20%;
        }

        .send-section textarea {
            width: 100%;
            resize: none;
        }

        .send-section button {
            border-radius: 10px;
            padding: 10px 15px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

    .send-section button:hover {
        background-color: #0056b3;
    }

  


</style>

    <script>
        let currentUser = "";

        function loadMessages() {
            $.ajax({
                url: '/Home/GetMessages',
                method: 'GET',
                success: function (messages) {
                    $('#messages').html('');
                    messages.forEach(function (message) {
                        const messageClass = (message.sender === currentUser) ? 'sender' : 'receiver';
                        const avatar = message.sender === currentUser ? 'https://i.imgur.com/1hT7vGQ.png' : 'https://i.imgur.com/uIgDDDd.png';
                        
                        $('#messages').append(
                            `<div class="message ${messageClass}">
                                <div class="message-bubble">
                                    <div><strong>${message.sender}</strong></div>
                                    <div>${message.content}</div>
                                    <div style="font-size: 0.8em; color: gray;">${message.timestamp}</div>
                                </div>
                                <img src="${avatar}" class="avatar">
                            </div>`
                        );
                    });
                    $('#messages').scrollTop($('#messages')[0].scrollHeight);
                }
            });
        }

        function sendMessage() {
            const sender = $('#sender').val();
            const content = $('#content').val();

            if (!sender || !content) return;

            currentUser = sender;

            $.ajax({
                url: '/Home/SendMessage',
                method: 'POST',
                data: { sender: sender, content: content },
                success: function () {
                    $('#content').val('');
                    loadMessages();
                }
            });
        }

        $(document).ready(function () {
            loadMessages();
            setInterval(loadMessages, 1000);

            $('#sendMessageForm').on('submit', function (e) {
                e.preventDefault();
                sendMessage();
            });
        });
    </script>
</head>
<body>
<div class="chat-container">
    <div id="messages"></div>

    <form id="sendMessageForm" class="send-section">
        <input type="text" id="sender" class="form-control" placeholder="Enter your name" required />
        <textarea id="content" class="form-control" placeholder="Type your message" rows="2" required></textarea>
        <button type="submit"><i class="fas fa-paper-plane"></i> Send</button>
    </form>
</div>
</body>
</html>
